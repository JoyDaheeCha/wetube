mixin videoPlayer(video={})
    .videoPlayer
        video(src=`/${video.src}`)
        .videoPlayer__controls
            .videoPalyer__column
                span
                    i.fas.fa-volume-up
                span
                    |00:00/10:00
            .videoPalyer__column
                span
                    i.fas.fa-play
            .videoPalyer__column
                span
                    i.fas.fa-expand