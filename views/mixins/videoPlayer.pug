mixin videoPlayer(video={})
    .videoPlayer#jsVideoPlayer
        video(src=`/${video.src}`)
        .videoPlayer__controls
            .videoPalyer__column
                span#jsVolumeControls
                    span#jsVolumeBtn
                        i.fas.fa-volume-up
                    span.videoPlayer__volumeBar#jsVolumeBar
                            input.volumeSlider#jsVolume(type="range", name="volume", min="0",max="1",value="0.5",step="0.1")
                span#jsTime
                    span#jsCurrentTime 00:00:00
                    |/
                    spam#jsTotalTime 00:00:00
            .videoPalyer__column
                span#jsPlayButton
                    i.fas.fa-play
            .videoPalyer__column
                span#jsFullScreen
                    i.fas.fa-expand